<UserControl x:Class="BoboTech.EncyclopaediaMetallumViewer.Fragments.Footer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="50" d:DesignWidth="200">
    <StackPanel>
        <TextBlock Grid.Row="3" Grid.ColumnSpan="3" Margin="3">
            <Hyperlink Command="{Binding OpenDonationUrlCommand}">
                <TextBlock Text="{Binding DonationMessage}"/>
            </Hyperlink>
        </TextBlock>
        <StackPanel Orientation="Horizontal" Name="ButtonsPanel"/>
    </StackPanel>
</UserControl>